<?xml version="1.0" encoding="UTF-8"?>
<form name="Inventory" align="client">

    <scrollBox align="client" g-cnt-line-spacing="5">
    	<Weapon text="PRIMARY WEAPON" field="primWeap" prof="true"/>
    	<Weapon text="SECONDARY WEAPON" field="secWeap" prof="false"/>
    	<Weapon text="INVENTORY WEAPON" field="invWeap1" prof="false"/>
    	<Weapon text="INVENTORY WEAPON" field="invWeap2" prof="false"/>

		<rectangle g="col" g-width="6" g-width-lg="3" color="black" strokeColor="white" strokeSize="1" g-min-height="210" padding="{left=5,right=5,top=5,bottom=5}">
			<label g="col" g-width="12" text="ACTIVE ARMOR" horzTextAlign="center" vertTextAlign="center" height="25"/>

			<Title text="NAME" field="armorName"/>
			<Title text="THRESHOLDS" field="armorThresholds" widthL="3" widthR="3"/>
			<Title text="SCORE" field="armorScore" widthL="3" widthR="3"/>
			<Title text="FEATURE" field="armorFeature"/>

			<textEditor g="col" g-width="12" g-vert-tile="true" g-min-height="75" field="armorNotes"/></rectangle>

		<rectangle g="col" g-width="6" g-width-lg="3" color="black" strokeColor="white" strokeSize="1" g-min-height="210" padding="{left=5,right=5,top=5,bottom=5}">
			<label g="col" g-width="12" text="GOLD" horzTextAlign="center" vertTextAlign="center" height="25"/>

			<label g="col" g-width="3" text="Handfuls" horzTextAlign="center" vertTextAlign="center" height="25"/>
			<checkBox g="col" g-width="1" field="handfulCheck1"/>
			<checkBox g="col" g-width="1" field="handfulCheck2"/>
			<checkBox g="col" g-width="1" field="handfulCheck3"/>
			<checkBox g="col" g-width="1" field="handfulCheck4"/>
			<checkBox g="col" g-width="1" field="handfulCheck5"/>
			<checkBox g="col" g-width="1" field="handfulCheck6"/>
			<checkBox g="col" g-width="1" field="handfulCheck7"/>
			<checkBox g="col" g-width="1" field="handfulCheck8"/>
			<checkBox g="col" g-width="1" field="handfulCheck9"/>

			<label g="col" g-width="3" text="Bags" horzTextAlign="center" vertTextAlign="center" height="25"/>
			<checkBox g="col" g-width="1" field="bagsCheck1"/>
			<checkBox g="col" g-width="1" field="bagsCheck2"/>
			<checkBox g="col" g-width="1" field="bagsCheck3"/>
			<checkBox g="col" g-width="1" field="bagsCheck4"/>
			<checkBox g="col" g-width="1" field="bagsCheck5"/>
			<checkBox g="col" g-width="1" field="bagsCheck6"/>
			<checkBox g="col" g-width="1" field="bagsCheck7"/>
			<checkBox g="col" g-width="1" field="bagsCheck8"/>
			<checkBox g="col" g-width="1" field="bagsCheck9"/>

			<label g="col" g-width="3" text="Chest" horzTextAlign="center" vertTextAlign="center" height="25"/>
			<checkBox g="col" g-width="1" field="chestCheck1"/>
		</rectangle>

        <richEdit g="col" g-width="12" g-vert-tile="true" field="inventory" backgroundColor="#333333" defaultFontSize="12" defaultFontColor="white"/>
	</scrollBox>
</form>