                                    mensagem = "[§K4]Desvantagem em Lidar com Animais de " .. (sheet.CODINOME or "Indivíduo(a)")
                                end
                                promise = mesaDoPersonagem.chat:asyncRoll(rolagem, mensagem)
                
                                local _, rollObject = await(promise)
                
                                for i = 1, #rollObject.ops do
