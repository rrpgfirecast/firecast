<?xml version="1.0" encoding="UTF-8"?>
<form name="frmTemplateDescription" align="client">
	<scrollBox align="client">
		<template name="Descricao">
			<layout align="left" width="380" margins="{right=10}">
				<label align="left" width="90" text="$(text)" horzTextAlign="center" fontSize="$(fontSize)"/>
				<edit align="left" width="290" field="$(field)" vertTextAlign="center" />
			</layout>
		</template>
		
		<rectangle left="0" top="0" width="1205" height="105" color="black">
			<label align="top" height="20" text="DESCRIÇÃO"/>

			<layout align="top" height="25">
				<Descricao text="NACIONALIDADE" field="nacionalidade" fontSize="10"/>
				<Descricao text="IDADE" field="idade" fontSize="13"/>
				<Descricao text="OLHOS" field="aparenciaOlhos" fontSize="13"/>
			</layout>

			<layout align="top" height="25">
				<Descricao text="ALTURA" field="altura" fontSize="13"/>
				<Descricao text="GÊNERO" field="genero" fontSize="13"/>
				<Descricao text="PELE" field="pele" fontSize="13"/>
			</layout>

			<layout align="top" height="25">
				<Descricao text="PESO" field="peso" fontSize="13"/>
				<Descricao text="OUTROS" field="aparenciaOutros" fontSize="13"/>
				<Descricao text="CABELO" field="cabelo" fontSize="13"/>
			</layout>
		</rectangle>
		
		<layout left="0" top="110" width="375" height="240">
			<rectangle align="client" color="black"/>
			<label left="5" top="1" width="100" height="20" text="APARÊNCIA"/>
			<textEditor left="5" top="25" width="365" height="210" field="aparencia"/>
		</layout>
		<layout left="0" top="355" width="375" height="250">
			<rectangle align="client" color="black"/>
			<label left="5" top="1" width="100" height="20" text="PERSONALIDADE"/>
			<textEditor left="5" top="25" width="365" height="220" field="personalidade"/>
		</layout>
		<layout left="380" top="110" width="825" height="495">
			<rectangle align="client" color="black"/>
			<label left="5" top="1" width="100" height="20" text="HISTORIA"/>
			<richEdit left="5" top="25" width="815" height="465" field="background" backgroundColor="#333333" defaultFontSize="12" defaultFontColor="white"/>
		</layout>
	</scrollBox>
</form>