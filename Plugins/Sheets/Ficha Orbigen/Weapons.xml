<?xml version="1.0" encoding="UTF-8"?>
<form name="Weapons" align="client">
    <script> 
        <![CDATA[
            local function newWeapon()
                self.rclWeapons:append()
            end
    
            local function newArmor()
                self.rclArmor:append()
            end
        ]]> 
    </script>
    <scrollBox align="client" g-cnt-line-spacing="5">
        <layout g="col" g-width="8" g-min-height="300" g-vert-tile="true" g-cnt-line-spacing="5">
            <rectangle g="col" g-width="12" g-width-lg="12" g-min-height="300" g-vert-tile="true" color="black" strokeColor="white" strokeSize="1" padding="{left=5,right=5,top=5,bottom=5}" g-vert-tile-weight="3">

                <button text="Nova Arma" g="col" g-width="12" height="25" onClick="newWeapon()" hint=""/>

                <layout g="col" g-width="12" g-width-lg="12" height="25" g-cnt-gutter="0" padding="{right=15}">
                    <layout g="col" g-width="10" height="25">
                        <label g="col" g-width="2" height="25" text="Nome" horzTextAlign="center" textTrimming="none"/>
                        <label g="col" g-width="2" height="25" text="Preço" horzTextAlign="center" textTrimming="none"/>
                        <label g="col" g-width="8" height="25" text="Descrição" horzTextAlign="center" textTrimming="none"/>
                    </layout>

                    <layout g="col" g-width="2" height="25" margins="{left=-5}">
                        <label g="col" g-width="6" height="25" text="Dano" horzTextAlign="center" textTrimming="none"/>
                    </layout>
                </layout>

                <scrollBox g="col" g-width="12" g-vert-tile="true">
                    <gridRecordList name="rclWeapons" field="rclWeapons" templateForm="WeaponsWeapon" g="col" g-width="12" g-cnt-line-spacing="5">
                        <event name="onCompare">
                            return Utils.compareStringPtBr(left.nome, right.nome);
                        </event>
                    </gridRecordList>
                </scrollBox>
            </rectangle>

            <rectangle g="col" g-width="12" g-width-lg="12" g-min-height="300" g-vert-tile="true" color="black" strokeColor="white" strokeSize="1" padding="{left=5,right=5,top=5,bottom=5}" g-vert-tile-weight="3">

                <button text="Nova Armadura" g="col" g-width="12" height="25" onClick="newArmor()" hint=""/>

                <layout g="col" g-width="12" g-width-lg="12" height="25" g-cnt-gutter="0" padding="{right=15}">
                    <layout g="col" g-width="10" height="25">
                        <label g="col" g-width="2" height="25" text="Nome" horzTextAlign="center" textTrimming="none"/>
                        <label g="col" g-width="2" height="25" text="Preço" horzTextAlign="center" textTrimming="none"/>
                        <label g="col" g-width="8" height="25" text="Descrição" horzTextAlign="center" textTrimming="none"/>
                    </layout>

                    <layout g="col" g-width="2" height="25" margins="{left=-5}">
                        <label g="col" g-width="4" height="25" text="DP" horzTextAlign="center" textTrimming="none"/>
                        <label g="col" g-width="4" height="25" text="RD" horzTextAlign="center" textTrimming="none"/>
                    </layout>
                </layout>

                <scrollBox g="col" g-width="12" g-vert-tile="true">
                    <gridRecordList name="rclArmor" field="rclArmor" templateForm="WeaponsArmor" g="col" g-width="12" g-cnt-line-spacing="5">
                        <event name="onCompare">
                            return Utils.compareStringPtBr(left.nome, right.nome);
                        </event>
                    </gridRecordList>
                </scrollBox>
            </rectangle>
        </layout>
        <layout g="col" g-width="4" g-min-height="300" g-vert-tile="true">
            <rectangle g="col" g-width="12" g-width-lg="12" g-min-height="300" g-vert-tile="true" color="black" strokeColor="white" strokeSize="1" padding="{left=5,right=5,top=5,bottom=5}" g-vert-tile-weight="3">
                <label g="col" g-width="12" text="ITENS" horzTextAlign="center" height="25"/>
                <textEditor g="col" g-width="12" g-vert-tile="true" field="itens"/>
            </rectangle>
        </layout>
    </scrollBox>
</form>