			<layout left="5" top="180" width="200" height="155">
				<label left="0" top="0" width="200" height="20" field="dataLabel" name="dataLabel" fontSize="10"/>
				<label left="0" top="20" width="200" height="20" field="estacaoLabel" name="estacaoLabel" fontSize="10"/>
