<?xml version="1.0" encoding="UTF-8"?>
<form name="Powers" align="client">
	<script>
        <![CDATA[

            local function newSpecialPower()
                self.rclSpecialPower:append()
            end
    
            local function newMagicPower()
                self.rclMagicPower:append()
            end
    
            local function newPsychicPower()
                self.rclPsychicPower:append()
            end
        ]]> 
    </script>

    <scrollBox align="client" g-cnt-line-spacing="5">
        <rectangle g="col" g-width="12" g-width-lg="4" g-min-height="275" g-vert-tile="true" color="black" strokeColor="white" strokeSize="1" padding="{left=5,right=5,top=5,bottom=5}" g-vert-tile-weight="3">

            <button text="Novo Poder Especial" g="col" g-width="12" height="25" onClick="newSpecialPower()" hint=""/>

            <layout g="col" g-width="12" g-width-lg="12" height="25" g-cnt-gutter="0" padding="{right=15}">
                <label g="col" g-width="9" height="25" text="Nome" horzTextAlign="center" textTrimming="none"/>
                <label g="col" g-width="2" height="25" text="Custo" horzTextAlign="center" textTrimming="none"/>
            </layout>

            <scrollBox g="col" g-width="12" g-vert-tile="true">
                <gridRecordList name="rclSpecialPower" field="rclSpecialPower" templateForm="Characteristic" g="col" g-width="12" g-cnt-line-spacing="5">
                    <event name="onCompare">
                        return Utils.compareStringPtBr(left.nome, right.nome);
                    </event>
                </gridRecordList>
            </scrollBox>
        </rectangle>

        <rectangle g="col" g-width="12" g-width-lg="4" g-min-height="275" g-vert-tile="true" color="black" strokeColor="white" strokeSize="1" padding="{left=5,right=5,top=5,bottom=5}" g-vert-tile-weight="3">

            <button text="Novo Poder Mágico" g="col" g-width="12" height="25" onClick="newMagicPower()" hint=""/>

            <layout g="col" g-width="12" g-width-lg="12" height="25" g-cnt-gutter="0" padding="{right=15}">
                <label g="col" g-width="9" height="25" text="Nome" horzTextAlign="center" textTrimming="none"/>
                <label g="col" g-width="2" height="25" text="Custo" horzTextAlign="center" textTrimming="none"/>
            </layout>

            <scrollBox g="col" g-width="12" g-vert-tile="true">
                <gridRecordList name="rclMagicPower" field="rclMagicPower" templateForm="Characteristic" g="col" g-width="12" g-cnt-line-spacing="5">
                    <event name="onCompare">
                        return Utils.compareStringPtBr(left.nome, right.nome);
                    </event>
                </gridRecordList>
            </scrollBox>
        </rectangle>

        <rectangle g="col" g-width="12" g-width-lg="4" g-min-height="275" g-vert-tile="true" color="black" strokeColor="white" strokeSize="1" padding="{left=5,right=5,top=5,bottom=5}" g-vert-tile-weight="3">

            <button text="Novo Poder Psíquico" g="col" g-width="12" height="25" onClick="newPsychicPower()" hint=""/>

            <layout g="col" g-width="12" g-width-lg="12" height="25" g-cnt-gutter="0" padding="{right=15}">
                <label g="col" g-width="9" height="25" text="Nome" horzTextAlign="center" textTrimming="none"/>
                <label g="col" g-width="2" height="25" text="Custo" horzTextAlign="center" textTrimming="none"/>
            </layout>

            <scrollBox g="col" g-width="12" g-vert-tile="true">
                <gridRecordList name="rclPsychicPower" field="rclPsychicPower" templateForm="Characteristic" g="col" g-width="12" g-cnt-line-spacing="5">
                    <event name="onCompare">
                        return Utils.compareStringPtBr(left.nome, right.nome);
                    </event>
                </gridRecordList>
            </scrollBox>
        </rectangle>
	</scrollBox>
</form>