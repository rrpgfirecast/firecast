							elseif ctrl=='5' then
								mod = getSAB();
							elseif ctrl=='6' then
								mod = getCAR();
							end;
							local nivel = $(num);
							
							if nivel==0 then
								resultado = 0;
							else 
								if (nivel>mod) then
									result = 0;
								else
									resultado = mod + 4 - nivel;
									resultado = math.floor(resultado/4);
								end;
							end;
							
