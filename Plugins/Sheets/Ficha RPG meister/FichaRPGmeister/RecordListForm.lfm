<?xml version="1.0" encoding="UTF-8"?>
<form name="frmRecordListForm" align="client" height="25" margins="{top=1}">
	<rectangle align="client" height="25" color="#212121">

		<layout align="right" width="55">
			<edit align="left" width="30" field="nivel" type="number"/>
			<!-- BotÃ£o que apaga o objeto da lista -->
			<button align="right" width="25" text="X">
				<event name="onClick">
					Dialogs.confirmOkCancel("Tem certeza que quer apagar esse objeto?",
						function (confirmado)
							if confirmado then
								NDB.deleteNode(sheet);
							end;
					end);
				</event>
			</button>
		</layout>
		<edit align="client" field="nome"/>

		<dataLink field="nivel">
			<event name="onUserChange"><![CDATA[
		        if sheet == nil then return end;

				local node = NDB.getParent(NDB.getParent(sheet));
				local signos = NDB.getChildNodes(node.listaDeSignos);
				local soma = 0;

				for i=1, #signos, 1 do 
					soma = soma + (tonumber(signos[i].nivel ) or 0);
				end;

				node.sumSignos = soma;
		        ]]>
			</event>
		</dataLink>
	</rectangle>
</form>
