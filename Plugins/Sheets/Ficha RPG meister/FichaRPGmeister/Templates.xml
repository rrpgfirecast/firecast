			</event>
		</rectangle>
		<edit g="col" g-width="4" height="25" type="float" fontSize="11" field="desl$(mode)" name="$(mode)Edit" visible="false">
			<event name="onExit">
				self.$(mode)Label.visible = true
				self.$(mode)Edit.visible = false
