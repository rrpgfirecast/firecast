					<textEditor align="top" height="165" field="desvantagens"/>
				</layout>

				<image left="1010" top="25" width="190" height="116" style="autoFit" src="images/ragnarok_c.jpg"/>
							</rectangle>

		</layout>
	</scrollBox>
</form> 