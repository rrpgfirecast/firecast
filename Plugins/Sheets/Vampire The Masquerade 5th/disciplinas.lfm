<?xml version="1.0" encoding="UTF-8"?>
<form name="disciplinas" height="230" width="220" margins="{left=20, right=20}">
<style>
label {
	fontSize: 14;
	fontColor: white;
	fontStyle: bold;
	textTrimming: character;
	fontFamily: Constantia;
}
edit {
	fontSize: 14;
	fontColor: #cdcdcd;
	textTrimming: character;
	fontFamily: Constantia;
	transparent: true;
}
horzLine{
	strokeColor: #424242;
	margins: {top=7};
	align: top;
	
}
imageCheckBox{
	checkedImage: /images/checkBoxAtv.png;
	uncheckedImage: /images/checkBoxDes.png;
	height: 25;
	width: 14;
	align: right;
	margins: {left=3};
	autoChange: false;
}
rectangle.LinhaDeFora{
	align: top; 
	color: transparent; 
	strokeColor: #272727; 
	strokeSize: 2; 
	xradius: 25; 
	yradius: 25; 
	cornerType: bevel; 
	margins: {top=20, right=20, bottom=20, left=20};
	height: 1460;
}
rectangle.LinhaDeDentro{
	align: client; 
	color: transparent; 
	strokeColor: #272727; 
	strokeSize: 1; 
	xradius: 23; 
	yradius: 23; 
	cornerType: bevel; 
	margins: {top=5, right=5, bottom=5, left=5};
}
rectangle.Fundo{
	align: client; 
	color: #272727; 
	xradius: 20; 
	yradius: 20; 
	cornerType: bevel; 
