		<template name="Disciplina">
			<flowPart class="flowCampo" margins="{bottom=5}">
			<edit align="left" name="nomeDis_$(n02)" field="fldDisPod_$(n02)" width="220" />
			<dataLink field="fldDisPod_$(n02)" defaultValue="â€”" />
			<button name="nomeBut$(n02)" text="ð¢" width="22" height="22" top="1" left="191" fontColor="#272727">
				<event name="onClick">
				<![CDATA[
					local pop = self:findControlByName("popUp_$(n02)");
					
					if pop ~= nil then
						pop:setNodeObject(sheet);
						pop:showPopupEx("bottom", self.nomeDis_$(n02));
					else
						showMessage("Ops, nÃ£o encontrei o pop-up para exibir");
					end;
				]]>
				</event>
			</button>
			<button name="nomeBut$(n02)B" text="ð¢" width="22" height="22" top="1" left="191" fontColor="white" visible="false">
