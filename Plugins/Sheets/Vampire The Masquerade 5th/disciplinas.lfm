						<dataLink field="fld$(n02)" defaultValue="DescriÃ§Ã£o do Poder">
								<event name="onChange">
								<![CDATA[
									if(sheet == nil) then return; end;
									if(sheet.fld$(n02) == nil or sheet.fld$(n02) == "DescriÃ§Ã£o do Poder") then
										self.nomeBut$(n02).visible = true;
										self.nomeBut$(n02)B.visible = false;
