}
label.Divisor {
	fontSize: 20;
	fontColor: white;
	fontStyle: bold;
	textTrimming: character;
	fontFamily: Constantia;
	horzTextAlign: center;
	autoSize: true;
	align: client;
	margins: {bottom=7};
}
label.AtrClasse{
	fontSize: 10;
	fontColor: white;
	textTrimming: character;
	fontFamily: Constantia;
	horzTextAlign: center;
	align: top;
}
flowLayout.Tabela{
	align: top; 
	orientation: horizontal; 
	horzAlign: center; 
	autoHeight: true; 
	maxControlsPerLine: 3; 
	margins: {left=20, top=20, bottom=30, right=20};
}
flowPart.flowCampo{
	minWidth: 220; 
	maxWidth: 220; 
	height: 25; 
	margins: {left=20, right=20, bottom=10};
}
edit.EditBold{
	fontSize: 14;
	fontColor: white;
	fontStyle: bold;
	textTrimming: character;
	fontFamily: Constantia;
}
</style>
