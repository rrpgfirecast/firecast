				<![CDATA[
					local pop = self:findControlByName("popUp_$(n02)");
					
					if pop ~= nil then
						pop:setNodeObject(sheet);
						pop:showPopupEx("bottom", self.nomeDis_$(n02));
					else
						showMessage("Ops, nÃ£o encontrei o pop-up para exibir");
