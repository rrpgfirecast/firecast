				</template>		

				<tab name="tabFOW" text="@@scene.fogOfWar">
					<scrollBox align="client">
						<flowLayout align="top" autoHeight="true" maxControlsPerLine="1" name="flaContentFOW">			
							<GroupHeader text="scene.fogOfWar.tokenVision"/>		
							
