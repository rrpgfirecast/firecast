		function hash(str)
		    h = 5381;

		    for c in str:gmatch"." do
		        h = ((h << 5) + h) + string.byte(c)
		    end
		    return math.abs(h)
		end

        local function GetTalemarkBlockStyle(node, text)
            local style = {}

            style = {}
            style.color = node[text.."Color"]
            style.bkgColor = node[text.."ColorBG"]
