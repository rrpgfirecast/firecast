<?xml version="1.0" encoding="UTF-8"?>
<form name="frmTemplateCreditos" align="client">
	<scrollBox align="client">
		<layout align="top" height="250">
			<image align="left" width="250" height="250" style="autoFit" src="logo_mesa" margins="{right=50}"/>
			<image align="left" width="250" height="250" style="autoFit" src="images/RPGmeister.jpg"/>
		</layout>

		<layout left="850" top="0" width="200" height="160">
			<rectangle align="client" color="black" xradius="5" yradius="15" cornerType="round"/>
			<label left="0" top="10" width="200" height="20" text="Template feito por: " horzTextAlign="center"/>
			<label left="0" top="35" width="200" height="20" text="Vinny (Ambesek)" horzTextAlign="center"/>
		</layout>
		
		<label left="555" top="275" width="200" height="20" text="Versão Atual: " horzTextAlign="center" field="versionInstalled"/>
		<label left="555" top="300" width="200" height="20" text="Sua Versão: " horzTextAlign="center" field="versionDownloaded"/>
		<checkBox left="555" top="325" width="200" height="20" field="noUpdate" text="Não pedir para atualizar."/>
			
		<button left="555" top="350" width="100" text="Change Log" onClick="GUI.openInBrowser('link_change_log')" />
		<button left="667" top="350" width="100" text="Atualizar" onClick="GUI.openInBrowser('raw_download_link')" />
		
		<label left="555" top="400" width="200" height="20" text="Conheça as Mesas:"/>
		<button left="555" top="425" width="100" text="RPGmeister" onClick="GUI.openInBrowser('https://my.firecastrpg.com/a?a=pagRWEMesaInfo.actInfoMesa&amp;mesaid=64070');" />
		<button left="667" top="425" width="125" text="Nome Mesa" onClick="GUI.openInBrowser('link_mesa');" />
	</scrollBox>
</form>